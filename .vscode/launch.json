{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Core + Java Extensions",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/vscode/core",
        "--extensionDevelopmentPath=${workspaceFolder}/vscode/java",
        "--extensionDevelopmentPath=${workspaceFolder}/vscode/javascript",
        "--enable-proposed-api=konveyor.konveyor-ai",
        "--verbose"
      ],
      "cwd": "${workspaceFolder}/vscode/core",
      "outFiles": [
        "${workspaceFolder}/vscode/core/out/**/*.js",
        "${workspaceFolder}/vscode/java/out/**/*.js",
        "${workspaceFolder}/vscode/javascript/out/**/*.js",
        "${workspaceFolder}/agentic/dist/**/*.js",
        "${workspaceFolder}/shared/dist/**/*.js"
      ],
      "sourceMaps": true,
      "resolveSourceMapLocations": [
        "${workspaceFolder}/vscode/core/out/**",
        "${workspaceFolder}/vscode/java/out/**",
        "${workspaceFolder}/agentic/dist/**",
        "${workspaceFolder}/shared/dist/**",
        "!**/node_modules/**"
      ],
      "preLaunchTask": "dev-without-shared"
    },
    {
      "name": "__ Extension Tests (broken)",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/vscode/core",
        "--extensionTestsPath=${workspaceFolder}/vscode/core/out/test/suite/index"
      ],
      "outFiles": [
        "${workspaceFolder}/vscode/core/out/test/**/*.js",
        "${workspaceFolder}/agentic/dist/**/*.js",
        "${workspaceFolder}/shared/dist/**/*.js"
      ],
      "sourceMaps": true,
      "resolveSourceMapLocations": [
        "${workspaceFolder}/vscode/core/out/**",
        "${workspaceFolder}/agentic/dist/**",
        "${workspaceFolder}/shared/dist/**",
        "!**/node_modules/**"
      ],
      "preLaunchTask": "npm: test-watch - vscode"
    },
    {
      "name": "__ Run Dev Script",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}
