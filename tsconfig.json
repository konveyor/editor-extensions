{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "composite": true,
    "declaration": true
  },
  "include": [
    "shared/src/**/*.ts",
    "vscode/src/**/*.ts",
    "webview-ui/src/**/*.ts"
  ],

  "references": [
    { "path": "./shared" },
    { "path": "./vscode" },
    { "path": "./webview-ui" }
  ]
}
